<% title = " : "+listing.title.toString().toUpperCase() %>
<% layout("/layouts/boilerplate.ejs") %>
<h2 class="offset-3">Listing Details</h2>
<div class="row">
<div class="card col-6 offset-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img mb-2" alt="<%= listing.image.filename %>">
        <div class="card-body">
                <p class="card-text">
                        <b>
                                <%= listing.title %>
                        </b>
                <div class="">
                        <div class="mb-1">
                                <%= listing.description %>
                        </div>
                        <div class="mb-1">&#8377;<%= listing.price.toLocaleString("en-IN") %>
                        </div>
                        <div class="mb-1">
                                <%= listing.location %>
                        </div>
                        <div class="mb-1">
                                <%= listing.country %>
                        </div>
                </div>
                </p>
        </div>
</div>
</div>
<div class="row">
<div class="col-md-1 offset-3">
        <form action="/listings/<%= listing._id %>/edit" method="get">
                <button class="btn btn-dark btns edit-btn">Edit</button>
        </form>
</div>
<div class="col-md-1 offset-4">
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark btns delete-btn">Delete</button>
        </form>
</div>
</div>
